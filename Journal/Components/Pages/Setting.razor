@page "/Setting"
<div class="container">
        <!-- Header -->
        <div class="header">
            <a href="#" class="back-button">← Back to Dashboard</a>
            <h1>⚙️ Settings</h1>
            <div style="width: 150px;"></div>
        </div>

        <!-- Settings Content -->
        <main class="settings-content">
            <!-- Profile Settings -->
            <section class="settings-section">
                <div class="section-header">
                    <h2 class="section-title">Profile Settings</h2>
                    <p class="section-description">Manage your personal information and profile</p>
                </div>

                <div class="profile-picture-section">
                    <div class="profile-avatar">JD</div>
                    <div class="profile-actions">
                        <button class="btn btn-primary">Upload Photo</button>
                        <button class="btn btn-secondary">Remove</button>
                    </div>
                </div>

                <div class="setting-item">
                    <div class="setting-info">
                        <div class="setting-label">Full Name</div>
                        <div class="setting-desc">Your name as it appears in the app</div>
                    </div>
                    <input type="text" class="input-field" value="John Doe" placeholder="Enter your name">
                </div>

                <div class="setting-item">
                    <div class="setting-info">
                        <div class="setting-label">Email Address</div>
                        <div class="setting-desc">Your email for account notifications</div>
                    </div>
                    <input type="email" class="input-field" value="john.doe@email.com" placeholder="Enter your email">
                </div>

                <div class="setting-item">
                    <div class="setting-info">
                        <div class="setting-label">Username</div>
                        <div class="setting-desc">Your unique username</div>
                    </div>
                    <input type="text" class="input-field" value="johndoe" placeholder="Enter username">
                </div>

                <div class="setting-item">
                    <div class="setting-info">
                        <div class="setting-label">Bio</div>
                        <div class="setting-desc">Tell us about yourself</div>
                    </div>
                    <input type="text" class="input-field" value="Writer, dreamer, journal enthusiast" placeholder="Enter your bio">
                </div>

                <div style="margin-top: 20px;">
                    <button class="btn btn-primary">Save Changes</button>
                </div>
            </section>

            <!-- Appearance Settings -->
            <section class="settings-section">
                <div class="section-header">
                    <h2 class="section-title">Appearance</h2>
                    <p class="section-description">Customize how JournalFlow looks</p>
                </div>

                <div class="setting-item">
                    <div class="setting-info">
                        <div class="setting-label">Dark Mode</div>
                        <div class="setting-desc">Enable dark mode for reduced eye strain</div>
                    </div>
                    <div class="toggle-switch"></div>
                </div>

                <div class="setting-item">
                    <div class="setting-info">
                        <div class="setting-label">Compact View</div>
                        <div class="setting-desc">Show more entries on screen</div>
                    </div>
                    <div class="toggle-switch"></div>
                </div>
            </section>
        </main>
    </div>